{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./model/**/*.ts",
        "./controller/**/*.ts",
        "./route/**/*.ts",
        "./utils/**/*.ts",
        "./*.ts"
      ],
    "exclude": ["node_modules", "dist"]
}
  